/* pages/index/index.wxss */
.photo{
  display: block;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.cover-info{
  position: absolute;
  left: 50px;
  top: 30px;
}
.cover-name{
  font-size: 30px;
  font-weight: bold;
  display: block;
  letter-spacing: 1px; 
}
.cover-spell{
  font-size: 20px;
  letter-spacing: 0.5px;
}
.big-circle{
  background-color: rgba(37, 163, 62, 0.6);
  width: 260px;
  height: 260px;
  border-radius: 130px;
  position: absolute;
  left: -130px;
  top: 150px;
}
.medium-circle{
  background-color: rgba(66,103,178, 0.8);
  width: 160px;
  height: 160px;
  border-radius: 80px;
  position: absolute;
  right: -80px;
  top: 150px;
}
.small-circle{
  background-color: rgba(240, 76, 76, 0.8);
  width: 50px;
  height: 50px;
  border-radius: 25px;
  position: absolute;
  left: -7px;
  bottom: 100px;
}
.cover-work{
  position: absolute;
  bottom: 165px;
  text-align: center;
  background-color: rgba(0,0,0,0.3);
  padding: 15px 0;
  width: 100%;
}
.cover-job{
  display: block;
  color: #fff;
  font-size: 30px;
  font-weight: bold;
}
.cover-exp{
  display: block;
  color: #fff;
  font-size: 20px;
}
.navigation{
  position: absolute;
  top: 40px;
  right: 10px;
  font-size: 18px;
}
.arrow-right{
  width: 20px;
  height: 20px;
  vertical-align: -4px;
}
.resume{
  margin: 0 20px;
}
.section{
  padding-bottom: 20px;
}
.section-info{
  display: flex;
  border-bottom: 1px solid #333;
  padding-bottom: 3px;
  margin: 10px 0;

}
.section-seq{
  background-color: #444;
  width: 22px;
  height: 22px;
  color: #fff;
  text-align: center;
  line-height: 22px;
  margin-right: 10px;
  font-weight: bold;
  margin-top: 2px;
}
.section-title{
  font-size: 20px;
}
.column{
  font-size: 16px;
  border-bottom: dashed 1px #333;
  padding: 10px 0;
}
.col-1{
  column-count: 1;
}
.col-2{
  column-count: 2;
}
.info{
  display: block;
}
.skill{
  padding: 5px 0;
}
.skill-name{
  font-size: 16px;
  display: block;
  margin-bottom: 5px;
}
/* .progress{

} */
.education,.work,.project{
  border-bottom: dashed 1px #999;
  padding: 10px 0;
}
.education:last-of-type{
  border-bottom: none;
}
.work:last-of-type{
  border-bottom: none;
}
.project:last-of-type{
  border-bottom: none;
}
.school,.company,.project{
  font-size: 16px;
  margin-bottom: 10px;
}
.icon-school{
  width: 26px;
  height: 26px;
  vertical-align: -6px;
  margin-right: 5px;
}
.row{
  display: flex;
  justify-content: space-between;
}
.info{
  font-size: 16px;
  margin-bottom: 10px;
}
.icon-book{
  width: 16px;
  height: 16px;
  vertical-align: -2px;
  margin-right: 3px;
}
.icon-calendar{
  width: 17px;
  height: 17px;
  vertical-align: -2px;
  margin-right: 3px;
}
.desc{
  color: #999;
  line-height: 1.5;
  font-size: 16px;
}
.page{
  display: block;
  width: 100%;
  text-align: center;
  padding-bottom: 10px;
}
.icon-company{
  width: 22px;
  height: 22px;
  vertical-align: -4px;
  margin-right: 3px;
}
.icon-job{
  width: 18px;
  height: 18px;
  vertical-align: -2.5px;
  margin-right: 3px;
}
.icon-computer{
  width: 26px;
  height: 26px;
  vertical-align: -7px;
  margin-right: 3px;
}